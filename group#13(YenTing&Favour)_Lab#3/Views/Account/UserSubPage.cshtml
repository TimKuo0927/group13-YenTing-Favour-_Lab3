@model List<group_13_YenTing_Favour__Lab_3.Models.Subscription>

@{
    ViewData["Title"] = "My Subscribed Podcasts";
}

<div class="container mt-5">
    <h2 class="fw-bold text-center mb-4">My Subscribed Podcasts</h2>

    @if (!Model.Any())
    {
        <div class="text-center text-muted mt-5">
            <i class="bi bi-headphones" style="font-size: 3rem;"></i>
            <p class="mt-3">You haven’t subscribed to any podcasts yet.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">
                Discover Podcasts
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var sub in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-primary">@sub.Podcast.Title</h5>
                            <p class="card-text text-muted flex-grow-1">@sub.Podcast.Description</p>

                            <div class="mt-2">
                                <small class="text-muted d-block">
                                    Subscribed on @sub.SubscribedDate.ToString("MMM dd, yyyy")
                                </small>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <a asp-controller="Podcast"
                                   asp-action="PodcastDetailPage"
                                   asp-route-PodcastId="@sub.PodcastId"
                                   class="btn btn-outline-primary btn-sm">
                                    View Podcast
                                </a>

                                <form asp-controller="Podcast" asp-action="Unsubscribe" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="podcastId" value="@sub.PodcastId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        Unsubscribe
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
