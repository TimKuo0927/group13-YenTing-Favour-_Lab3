@model group_13_YenTing_Favour__Lab_3.ViewModel.EpisodeWirhCommentViewModel
@{
    ViewData["Title"] = "Episode Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-body">
                    <h2 class="fw-bold text-primary mb-3">@Model.Title</h2>
                    <div class="col">
                        <div class="col-10"></div>
                        <a class="btn btn-primary col-2" asp-controller="Episode" asp-action="EditEpisodePage" asp-route-EpisodeId="@Model.EpisodeId">Edit Eposide</a>
                    </div>
                    <p class="text-muted mb-1">
                        <strong>Podcast:</strong> @Model.Podcast?.Title
                    </p>
                    <p class="text-muted mb-1">
                        <strong>Release Date:</strong> @Model.ReleaseDate.ToString("MMMM dd, yyyy")
                    </p>
                    <p class="text-muted mb-1">
                        <strong>Duration:</strong> @TimeSpan.FromSeconds(Model.Duration).ToString(@"hh\:mm\:ss")
                    </p>
                    <p class="text-muted">
                        <strong>Views:</strong> @Model.NumberOfViews
                    </p>

                    <div class="mt-4">
                        <video width="100%" controls poster="/images/video-placeholder.png">
                            <source src="@Model.AudioFileUrl" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>

                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                        {
                            <div class="border rounded-3 p-3 mb-2">
                                <div class="d-flex justify-content-between">
                                    <strong>@comment.UserName</strong>
                                    <small class="text-muted">@comment.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")</small>
                                </div>
                                <p class="mb-0">@comment.Message</p>
                            </div>
                        }
                    }

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-controller="Podcast" asp-action="PodcastDetailPage" asp-route-PodcastId="@Model.PodcastId"
                           class="btn btn-outline-secondary">Back to Podcast</a>
                        <span class="text-muted small align-self-center">
                            Last updated: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
